<h1>New Game</h1>
<div id="container">
  <div id="grid">
    <% @letters.each do |letter| %>
      <div id="letter-background">
        <span><%= letter %></span>
      </div>
    <% end %>
  </div>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="grid" value="<%= @letters.join %>" hidden>
    <input type="text" name="attempt" placeholder="What's your guess?">
    <button type="submit">Play</button>
  </form>
</div>

