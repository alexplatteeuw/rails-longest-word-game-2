<h1>New Game</h1>
<div id="grid">
  <% @letters.each do |letter| %>
    <div id="letter-background">
      <p><%= letter %></p>
    </div>
  <% end %>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="grid" value="<%= @letters.join %>" hidden>
      <input type="text" name="attempt" placeholder="What's your guess?">
      <input type="submit">
    </form>
</div>

